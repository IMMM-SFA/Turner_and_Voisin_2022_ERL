@article{ ISI:000293588000009,
Author = {Xu, N. W. and Tang, C. A. and Li, L. C. and Zhou, Z. and Sha, C. and
   Liang, Z. Z. and Yang, J. Y.},
Title = {{Microseismic monitoring and stability analysis of the left bank slope in
   Jinping first stage hydropower station in southwestern China}},
Journal = {{INTERNATIONAL JOURNAL OF ROCK MECHANICS AND MINING SCIENCES}},
Year = {{2011}},
Volume = {{48}},
Number = {{6}},
Pages = {{950-963}},
Month = {{SEP}},
Abstract = {{Risks associated with the left banks lope of Jinping first hydro power
   station in south western China are growing as a result of excavation of
   the dam foundation ditch and various tunnels, as well as grouting to
   soft strata. To improve our understanding of the slope instability and
   resolve the complex subsurface conditions of the highly fractured rock
   mass, a microseismic monitoring system was installed in June 2009, which
   is the first time such a technique has been introduced in to stability
   analysis of a high steep rock slope in China. The micro seismic
   monitoring system consists of a data acquisition unit, a data processing
