@article{ ISI:000247174300011,
Author = {Dan, Li and Ji, Jinjun},
Title = {{The surface energy, water, carbon flux and their intercorrelated
   seasonality in a global climate-vegetation coupled model}},
Journal = {{TELLUS SERIES B-CHEMICAL AND PHYSICAL METEOROLOGY}},
Year = {{2007}},
