@article{ ISI:000301828900011,
Author = {Zhang, Chao and Chen, Jining and Wen, Zongguo},
Title = {{Assessment of policy alternatives and key technologies for energy
   conservation and water pollution reduction in China's synthetic ammonia
   industry}},
