@article{ ISI:000336704400004,
Author = {Jiang, Quan and Feng, Xia-ting and Hatzor, Yossef H. and Hao, Xian-jie
   and Li, Shao-jun},
Title = {{Mechanical anisotropy of columnar jointed basalts: An example from the
