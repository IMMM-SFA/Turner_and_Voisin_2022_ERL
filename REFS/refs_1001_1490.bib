
@article{ ISI:000353963600001,
Author = {Zhou, Linjiong and Bao, Qing and Liu, Yimin and Wu, Guoxiong and Wang,
   Wei-Chyung and Wang, Xiaocong and He, Bian and Yu, Haiyang and Li,
   Jiandong},
Title = {{Global energy and water balance: Characteristics from Finite-volume
   Atmospheric Model of the IAP/LASG (FAMIL1)}},
Journal = {{JOURNAL OF ADVANCES IN MODELING EARTH SYSTEMS}},
Year = {{2015}},
Volume = {{7}},
Number = {{1}},
Pages = {{1-20}},
Month = {{MAR}},
Abstract = {{This paper documents version 1 of the Finite-volume Atmospheric Model of
   the IAP/LASG (FAMIL1), which has a flexible horizontal resolution up to
   a quarter of 1 degrees. The model, currently running on the ``Tianhe
   1A{''} supercomputer, is the atmospheric component of the
   third-generation Flexible Global Ocean-Atmosphere-Land climate System
   model (FGOALS3) which will participate in the Coupled Model
   Intercomparison Project Phase 6 (CMIP6). In addition to describing the
   dynamical core and physical parameterizations of FAMIL1, this paper
   describes the simulated characteristics of energy and water balances and
   compares them with observational/reanalysis data. The comparisons
   indicate that the model simulates well the seasonal and geographical
   distributions of radiative fluxes at the top of the atmosphere and at
   the surface, as well as the surface latent and sensible heat fluxes. A
   major weakness in the energy balance is identified in the regions where
   extensive and persistent marine stratocumulus is present. Analysis of
   the global water balance also indicates realistic seasonal and
   geographical distributions with the global annual mean of evaporation
   minus precipitation being approximately 10(-5) mm d(-1). We also examine
   the connections between the global energy and water balance and discuss
   the possible link between the two within the context of the findings
   from the reanalysis data. Finally, the model biases as well as possible
   solutions are discussed.}},
