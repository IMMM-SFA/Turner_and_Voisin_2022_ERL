@article{ ISI:000438181000076,
Author = {Chen, Pi-Cheng and Alvarado, Valeria and Hsu, Shu-Chien},
Title = {{Water energy nexus in city and hinterlands: Multi-regional physical
   input-output analysis for Hong Kong and South China}},
Journal = {{APPLIED ENERGY}},
Year = {{2018}},
Volume = {{225}},
Pages = {{986-997}},
Month = {{SEP 1}},
Abstract = {{Most cities import energy and water from their hinterlands. Both the
   nexus in a city and that between the city and its hinterlands should be
   considered for comprehensive management of water and energy. To examine
   the water-energy nexus associated with the city embedded in the
