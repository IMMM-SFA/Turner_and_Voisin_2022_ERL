@article{ ISI:000454073800166,
Author = {Zhong, W. and Chen, X. Q. and He, N. and Yang, T.},
Title = {{Ecological Taxonomy of Hydropower Rock High Slope and Its Environmental
   Application in Southwest China}},
Journal = {{EKOLOJI}},
Year = {{2018}},
Volume = {{27}},
Number = {{106}},
Pages = {{1417-1426}},
Abstract = {{To further remedy ecological environment, correct understanding of side
   slope stability is essential for the effective reinforcement and
   protection of rock-soil slope. Rock slope stability calculations and
   support design are largely based on the analysis of site geological
   conditions. Existing methods of geological analysis primarily involve
   phenomenon description and analysis of rock structure, and are not
   convenient for designers due to the lack of a reasonable index
   describing slope structural characteristics in the solid earth. In this
   paper, the differences and connection between slope body structure, the
   natural rock structure and slope structure are first discriminated, then
   discussed with the establishment of a slope body structure model. Slope
   body structure is established on the basis of geological investigation
   and slope analysis, taking into account factors such as the main control
   of the structural plane, comprehensive analysis of engineering
   geological petrofabric, environmental characteristics, geological
   structural features, the result of natural forces, and groundwater
   development status. Based on a summary and analysis of slope geological
   conditions at the sites of hydropower projects (both those already built
   and those under construction) in southwest China, slope body structure
   is divided into six classes and ten types, producing an ecological
   taxonomy system. This system is then employed to establish the
   corresponding relationship between slope body structure and failure
   mode, which in turn provides data for the development of a calculation
   model and selection method for the analysis of slope stability and
   support design. Finally, the environmental application value of
   determining slope body structure is described.}},
Article-Number = {{UNSP e106168}},
ISSN = {{1300-1361}},
Unique-ID = {{ISI:000454073800166}},
}

