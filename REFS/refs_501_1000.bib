@article{ ISI:000433650600073,
Author = {Zhang, Fan and Zhan, Jinyan and Li, Zhihui and Jia, Siqi and Chen, Sijin},
Title = {{Impacts of urban transformation on water footprint and sustainable
   energy in Shanghai, China}},
