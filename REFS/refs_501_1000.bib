@article{ ISI:000386777100015,
Author = {Yu, Bing and Xu, Linyu and Wang, Xuan},
Title = {{Ecological compensation for hydropower resettlement in a reservoir
   wetland based on welfare change in Tibet, China}},
Journal = {{ECOLOGICAL ENGINEERING}},
Year = {{2016}},
Volume = {{96}},
Number = {{SI}},
Pages = {{128-136}},
Month = {{NOV}},
Abstract = {{The ecological compensation for hydropower development should
   internalize the exterior costs of losses to both humans and the
   environment from hydropower projects and their associated resettlement
   projects in a reservoir wetland. However, the externalities from the
   resettlement are rarely consideredin current compensation policies or
   regulations, and thus many new environmental issues arise in the
   reservoir wetland region. In this context, an ecological compensation
   accounting method for hydropower resettlement was established in this
