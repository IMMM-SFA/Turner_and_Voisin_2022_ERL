@article{ ISI:000387617200004,
Author = {Smith, Kate and Liu, Shuming and Liu, Yi and Savic, Dragan and Olsson,
   Gustaf and Chang, Tian and Wu, Xue},
Title = {{Impact of urban water supply on energy use in China: a provincial and
