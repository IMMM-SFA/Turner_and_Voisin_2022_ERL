@article{ ISI:000462690100095,
Author = {Quiroga, Daniela and Sauma, Enzo and Pozo, David},
Title = {{Power system expansion planning under global and local emission
   mitigation policies}},
Journal = {{APPLIED ENERGY}},
Year = {{2019}},
Volume = {{239}},
Pages = {{1250-1264}},
Month = {{APR 1}},
Abstract = {{This work analyzes the impacts on the power system expansion planning of
   implementing CO2 and local pollutant emission taxes under five different
   policy-relevant scenarios. To do this, we have formulated and
   implemented an optimization model based on a mixed-integer linear
   program, which determines the optimal expansion plan considering the
   installation of both large-scale power plants and renewable-based
   distributed generation. An important characteristic of the proposed
   model is that it includes a detailed formulation of the power system.
   Moreover, differently than existing literature, special attention is
   given to the analysis of the spatial-temporal distributive effects of
   pollutant taxes, considering both global and local pollutant emissions.
   The method is applied to the main Chilean power system. Our results
   indicate that global and local pollutant taxes significantly impact both
   planning and operational decisions in the power system. In particular,
