@article{ ISI:000536952200077,
Author = {Li, Aijun and Zhou, Dinglin and Chen, Guoshi and Liu, Yuhao and Long,
   Yan},
Title = {{Multi-region comparisons of energy-related CO2 emissions and production
   water use during energy development in northwestern China}},
