ISSN = {{0142-0615}},
EISSN = {{1879-3517}},
ResearcherID-Numbers = {{Li, Chaoshun/B-9977-2015}},
ORCID-Numbers = {{Li, Chaoshun/0000-0003-1664-5877}},
Unique-ID = {{ISI:000526402600007}},
