@article{ ISI:000524981300143,
Author = {Chai, Jian and Shi, Huiting and Lu, Quanying and Hu, Yi},
Title = {{Quantifying and predicting the
   Water-Energy-Food-Economy-Society-Environment Nexus based on Bayesian
