@article{ ISI:000563025000006,
Author = {Liang, Yuhan and Li, Yumeng and Liang, Sai and Feng, Cuiyang and Xu,
   Lixiao and Qi, Jianchuan and Yang, Xuechun and Wang, Yafei and Zhang,
   Chao and Li, Ke and Li, Hui and Yang, Zhifeng},
Title = {{Quantifying Direct and Indirect Spatial Food-Energy-Water (FEW) Nexus in
