@article{ ISI:000459952200069,
Author = {Graabak, I. and Korpas, M. and Jaehnert, S. and Belsnes, M.},
Title = {{Balancing future variable wind and solar power production in
   Central-West Europe with Norwegian hydropower}},
Journal = {{ENERGY}},
Year = {{2019}},
Volume = {{168}},
Pages = {{870-882}},
Month = {{FEB 1}},
Abstract = {{Norwegian hydropower has an excellent potential to balance power
   production in a future Central-West European power system with large
   shares of variable wind and solar resources. The assessment of the
   realistic potential for Norwegian hydropower to deliver flexibility is
   based on two pillars, adequate hydropower modelling and the sufficient
   geographical area covered in the model. Analyses are done with
   state-of-the-art models including a detailed description of cascaded
   water-courses with more than thousand reservoirs. Interoperability
   between hydropower and renewable energy sources is ensured as the entire
